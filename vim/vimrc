language messages en_US 
set encoding=utf-8

" Get rid of legacy stuff
set nocompatible
set backspace=indent,eol,start
set cursorline

" Hide buffers instead of closing them
set hidden

" Turn on syntax highlight and show line numbers by default
syntax on
set nu

" Use system clipboard 
set clipboard=unnamed

" Enable mouse support
if has('mouse')
  set mouse=a
endif

" Turn off annoying beep sound
set visualbell
set noerrorbells

" NOTE: Shall think about better backup strategy
set nobackup
set noswapfile

set history=500
set undolevels=500
set ruler
set showcmd

" Search settings
set incsearch
set ignorecase
set smartcase
set hlsearch
" Clear last search highlight on Return pressed in command mode
nnoremap <CR> :noh<CR><CR>

" Indentation settings
filetype plugin indent on
autocmd FileType text setlocal textwidth=79
set tabstop=4
set shiftwidth=4
set smarttab
set expandtab
" ruby specific
:autocmd Filetype ruby set softtabstop=2
:autocmd Filetype ruby set shiftwidth=2
:autocmd Filetype ruby set tabstop=2

let python_highlight_all=1

nnoremap / /\v
vnoremap / /\v

" Pretty whitespaces highlight 
set listchars=tab:▸\ ,eol:¬ 
autocmd filetype html,xml set listchars-=tab:▸\ ,eol:¬ 
highlight SpecialKey guifg=#505070

" Jump over visual rows, not actual lines
nnoremap j gj
nnoremap k gk

" More convenient way to return to normal mode from insert mode
inoremap jj <ESC>

" Remap <leader> to , key
let mapleader = ","

" Toggle whitespace highlighting
nmap <leader>l :set list!<CR> 

" Delete to the end of line
nmap <leader>d d$

" Call CommandT
nnoremap <leader>t :CommandT<CR>
" fixing ESC in OS X terminal
"let g:CommandTCancelMap=['<ESC>','<C-c>']
let g:CommandTMaxHeight=15

" Use <tab> to jump to matching bracket
nnoremap <tab> %
vnoremap <tab> %

" For more rapid command insertion
nnoremap ; :

" Edit and reload vimrc (this file)
nmap <silent> <leader>ev :e $MYVIMRC<CR>
nmap <silent> <leader>sv :so $MYVIMRC<CR>

" Change working directory automatically
"set autochdir

if has("gui_running")
    " Hide the mouse when typing text
    set mousehide 

    " Get rid of toolbar
    set guioptions-=T 

    " Set fancy font
    if has("gui_mac") || has("gui_macvim")
        set gfn=Andale\ Mono:h13
    endif

    if has("gui_win32") || has("gui_win32s")
        set gfn=Consolas:h10.5:cDEFAULT 
    endif
else
    set t_Co=256
endif

colorscheme molokai

